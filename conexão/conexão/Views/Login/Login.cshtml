@model conexão.Models.UsuarioDTO;

<div class="container1">
    <h3>Bem Vindo(a)</h3>
    <span><b>Crie sua conta e  continue sua jornada musical com os melhores instrumentos ao seu alcance.<b></b></span>
</div>

<div class="img-do-login">
    <img src="~/imagens.img/login.png" alt="">
</div>

<div class="container">
    <form method="post">
        <div class="row">
            <div class="col-25">
                <label for="fname"><b>Primeiro Nome</b></label>
               
            </div>
            <div class="col-75">
                <input asp-for="Nome" type="text" id="fname"  placeholder="Insira seu nome..." required>

            </div>
        </div>
        <div class="row">
            <div class="col-25">
                <label for="lname"><b>Sobrenome</b></label>
              
            </div>
            <div class="col-75">
                <input asp-for="Sobrenome"  type="text" id="lname"  placeholder="Insira seu sobrenome..." required>
            </div>
        </div>

        <div class="row">
            <div class="col-25">
                <label for="lname"><b>Email</b></label>
              
            </div>
            <div class="col-75">
                <input asp-for="Email" type="text" id="lname"  placeholder="Insira seu email..." required>
            </div>
        </div>

        <div class="row">
            <div class="col-25">
                <label for="lname"><b>Senha</b></label>
             
            </div>
            <div class="col-75">
                <input asp-for="Senha" type="text" id="lname"  placeholder="Insira sua senha..." required>
            </div>
        </div>

        <div class="row">
            <div class="col-25">
                <label for="lname"><b>Repita sua senha</b></label>
            
            </div>
            <div class="col-75">
                <input asp-for="Confirmacao" type="text" id="lname"  placeholder="Repita sua senha..." required>
            </div>
        </div>

        <br>
        <div class="row">
            <input type="submit" value="Enviar">
        </div>
    </form>
</div>


